# KidRocket Designer Environment Configuration
# Copy this file to .env and configure your environment variables

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
PORT=3000
APP_NAME="KidRocket Designer"
APP_VERSION=1.0.0
API_BASE_URL=http://localhost:3000/api/v1
CLIENT_BASE_URL=http://localhost:3000

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kidrocket_designer
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# =============================================================================
# Redis Configuration (Caching & Sessions)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=kidrocket:
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100

# Cache Fallback Configuration
CACHE_FALLBACK_ENABLED=true
CACHE_FALLBACK_MAX_SIZE=1000
CACHE_FALLBACK_TTL=300

# =============================================================================
# JWT Authentication Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@kidrocket.com
EMAIL_FROM_NAME="KidRocket Designer"
